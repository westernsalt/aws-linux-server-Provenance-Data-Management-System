                </div>

                <!-- START THE FEATURETTES -->
                <div style="width:17%; margin:0 auto;">
                    <form method="post" enctype="multipart/form-data" action="/data/uploadData" id="upload">
                        <input type="file" name="uploadFile"/><br><br>
                </div>
                <div>
                    <input class="btn btn-primary" type="submit" value="확인" style="width:100px; background-color: #4a9dea; border-color:  #4a9dea;" onclick="upload()">
                    <input class="btn btn-light" type="reset" value="취소" style="width:100px; background-color: #dddddd;">
                    </form>
                </div>

            </div><!-- /.container -->
        <% } %>
    </div>
</div>
